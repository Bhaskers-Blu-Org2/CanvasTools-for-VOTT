{
    "compilerOptions": {
        "target": "es2015",
        "module": "amd",
        "removeComments": true,
        "preserveConstEnums": true,

        "isolatedModules": false,
        "sourceMap": true,        
        
        "noImplicitAny": true,
        "noImplicitThis": true,
        
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "@snapsvg/*": ["snapsvg/*"],
            "@canvastools/*" : ["canvastools/js/*"],
            "@CTBase/*": ["canvastools/js/Base/*"] 
        },

        "outFile": "library/js/canvastools.js"
    },
    "include": [     
        "src/canvastools/js/*.ts",
        "src/canvastools/js/Base/*.ts"
    ]
}